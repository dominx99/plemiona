{% extends "layouts/game.twig" %}

{% block title %}{{ building.name }}{% endblock title %}

{% block content %}
    <div class="alert alert-secondary mb-3">
        Ulepszanie <span class="{{ building.color }}">{{ building.name }}</span> przyśpiesza przyrost żarcia
    </div>

    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr class="header">
                        <th></th>
                        <th>teraz</th>
                        <th>następny poziom</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>żarcia na sekundę</td>
                        <td class="text-center">{{ now }}</td>
                        <td class="text-center">{{ next_level }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr class="header">
                        <th>koszt ulepszenia</th>
                        <th>{{ building.cost }}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>czas ulepszania</td>
                        <td>{{ building.time }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock content %}

{% block js %}
    <script src="{{ base_url() }}/dist/js/village.min.js"></script>
{% endblock js %}
