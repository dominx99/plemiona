<div class="sidebar">
    {% if village %}
        <a href="{{ path_for('villages.show', {id: village.id}) }}" class="header">{{ village.name }}</a>
        <div class="section">
            <ul class="properties">
                <li>
                    <div>gold</div>
                    <div id="gold">{{ village.gold }}</div>
                </li>
                <li>
                    <div>food</div>
                    <div id="food">{{ village.food }}</div>
                </li>
            </ul>
        </div>
    {% else %}
        <div>
            {% for village in auth.user.villages %}
                <a href="{{ path_for('villages.show', {id: village.id}) }}" class="header">{{ village.name }}</a>

                <div id="village_{{ village.id }}" class="section timings">
                    {% for expedition in village.expeditions %}
                        <div class="timing">
                            <div class="name">
                                <div>{{ expedition.receiver.name }}</div>
                                <div class="destination">{{ expedition.destination }}</div>
                            </div>
                            <div class="time">{{ expedition.reach_at | date('H:i:s') }}</div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    {% endif %}

